{
  "name": "vercel-veil",
  "version": "0.1.0",
  "description": "A lightweight gateway service for handling Sonarr/Radarr webhooks and sending email notifications via Resend",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidKk/vercel-veil.git"
  },
  "scripts": {
    "commit": "git-cz",
    "ci:coverage": "pnpm test",
    "postinstall": "node --experimental-modules ./scripts/postinstall.mjs",
    "preinstall": "node --experimental-modules ./scripts/preinstall.mjs",
    "clear": "rimraf --glob ./libs",
    "format": "prettier --config .prettierrc.js --write \"**/*.{js,jsx,ts,tsx,d.ts,vue,md,json,yml,yaml}\"",
    "lint": "pnpm lint:ts",
    "lint:ts": "eslint -c eslint.config.mjs --fix .",
    "dev": "next dev",
    "dev:e2e": "next dev --hostname 127.0.0.1 --port 3000",
    "build": "next build",
    "start": "next start",
    "test": "jest -c ./jest.config.ts --coverage --reporters=default --reporters=jest-junit --passWithNoTests",
    "test:e2e": "playwright test --reporter=list",
    "test:watch": "jest --watch",
    "ok": "pnpm format && pnpm lint && pnpm build && pnpm test",
    "prepare": "husky"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "ahooks": "^3.8.4",
    "cookie": "^1.0.2",
    "css-select": "^6.0.0",
    "fast-xml-parser": "^4.3.5",
    "feather-icons-react": "^0.8.1",
    "htmlparser2": "^10.0.0",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.12",
    "next": "15.1.3",
    "otplib": "^12.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/eslintrc": "^3",
    "@jest/types": "^29.6.3",
    "@playwright/test": "^1.56.1",
    "@types/chalk": "^2.2.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "chalk": "^5.3.0",
    "commitizen": "^4.2.4",
    "commitlint-plugin-i18n": "^0.0.1-alpha.3",
    "cz-customizable": "^7.2.1",
    "cz-customizable-i18n-config": "^0.0.1-alpha.2",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-runner-tsd": "^6.0.0",
    "json5": "^2.2.3",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "pretty-error": "^4.0.0",
    "raw-loader": "^4.0.2",
    "rimraf": "^6.0.1",
    "spinnies": "^0.5.1",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.2.1",
    "tsd-lite": "^0.9.0",
    "typescript": "^5",
    "typescript-transform-paths": "^3.4.7"
  },
  "packageManager": "pnpm@10.2.0+sha512.0d27364e0139c6aadeed65ada153135e0ca96c8da42123bd50047f961339dc7a758fc2e944b428f52be570d1bd3372455c1c65fa2e7aa0bfbf931190f9552001"
