<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>New Movies Notification</title>
    <style>
      body {
        margin: 0;
        padding: 32px 0;
        background-color: #e5e7eb;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      }
      .outer {
        max-width: 720px;
        margin: 0 auto;
        padding: 0 16px;
      }
      .card {
        background: #ffffff;
        border-radius: 18px;
        padding: 32px;
        border: 1px solid rgba(15, 23, 42, 0.08);
        box-shadow: 0 25px 60px rgba(15, 23, 42, 0.08);
      }
      .heading {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 16px;
      }
      .badge {
        background: #10b981;
        color: #fff;
        padding: 6px 14px;
        border-radius: 999px;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }
      .info-grid {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
        margin-top: 24px;
      }
      .info-item {
        flex: 1 1 180px;
        background: #f4f6fb;
        border-radius: 12px;
        padding: 14px;
      }
      .info-item span {
        display: block;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #6b7280;
      }
      .info-item strong {
        display: block;
        margin-top: 6px;
        font-size: 15px;
        color: #111827;
      }
      .section {
        margin-top: 28px;
      }
      .section h2 {
        margin: 0 0 20px;
        font-size: 16px;
        color: #111827;
      }
      .movie-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        max-width: 100%;
      }
      .movie-item {
        display: flex;
        flex-direction: column;
        border-radius: 12px;
        overflow: hidden;
        background: #fff;
        border: 1px solid rgba(15, 23, 42, 0.08);
        box-shadow: 0 1px 3px rgba(15, 23, 42, 0.1);
        transition:
          transform 0.2s,
          box-shadow 0.2s;
      }
      .movie-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(15, 23, 42, 0.15);
      }
      .movie-poster {
        position: relative;
        width: 100%;
        /* Standard movie poster aspect ratio: 2:3 (width:height) */
        aspect-ratio: 2 / 3;
        overflow: hidden;
        background: #f3f4f6;
      }
      .movie-poster img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
      }
      .movie-info {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding: 12px;
      }
      .movie-title {
        font-size: 14px;
        font-weight: 600;
        color: #111827;
        margin: 0;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
      .movie-meta {
        font-size: 12px;
        color: #6b7280;
        line-height: 1.4;
      }
      .movie-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        margin-top: 4px;
      }
      .movie-tag {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
      }
      .movie-tag-year {
        background: #f3f4f6;
        color: #374151;
      }
      .movie-score {
        display: inline-block;
        background: #fef3c7;
        color: #92400e;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
      }
      .movie-tag-link {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 11px;
        font-weight: 600;
        text-decoration: none;
        transition: opacity 0.2s;
      }
      .movie-tag-link:hover {
        opacity: 0.8;
      }
      .movie-tag-tmdb {
        background: #01d277;
        color: #fff;
      }
      .movie-tag-maoyan {
        background: #ff6b35;
        color: #fff;
      }
      .movie-tag-genre {
        background: #e0e7ff;
        color: #4338ca;
      }
      .cta-button {
        display: inline-block;
        margin-top: 24px;
        padding: 12px 24px;
        background: #0284c7;
        color: #fff;
        text-decoration: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        text-align: center;
      }
      .cta-button:hover {
        background: #0369a1;
      }
      .footer {
        margin-top: 32px;
        text-align: center;
        font-size: 12px;
        color: #94a3b8;
      }
      @media (max-width: 600px) {
        .card {
          padding: 24px;
        }
        .info-item {
          flex: 1 1 100%;
        }
        .movie-list {
          grid-template-columns: repeat(2, 1fr);
          gap: 16px;
        }
        .movie-info {
          padding: 10px;
        }
        .movie-title {
          font-size: 13px;
        }
      }
      @media (max-width: 400px) {
        .movie-list {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="outer">
      <div class="card">
        <div class="heading">
          <div>
            <p style="margin: 0; text-transform: uppercase; letter-spacing: 0.2em; color: #10b981; font-size: 12px">Movies</p>
            <h1 style="margin: 4px 0; font-size: 24px; color: #111827">New Movies Update</h1>
          </div>
          <span class="badge">{{newMoviesCount}} New Movie{{#if isPlural}}s{{/if}}</span>
        </div>

        <div class="info-grid">
          <div class="info-item">
            <span>New Count</span>
            <strong>{{newMoviesCount}} Movie{{#if isPlural}}s{{/if}}</strong>
          </div>
          <div class="info-item">
            <span>Update Date</span>
            <strong>{{currentDate}}</strong>
          </div>
        </div>

        <div class="section">
          <h2>New Movies List</h2>
          <div class="movie-list">
            {{#each newMoviesJSON}}
            <div class="movie-item">
              <div class="movie-poster">
                <img src="{{{poster}}}" alt="{{name}}" />
              </div>
              <div class="movie-info">
                <p class="movie-title">{{name}}</p>
                <div class="movie-tags">
                  {{#if year}}
                  <span class="movie-tag movie-tag-year">{{year}}</span>
                  {{/if}} {{#if score}}
                  <span class="movie-tag movie-score">{{score}}</span>
                  {{/if}}
                </div>
                {{#if genres}}
                <div class="movie-tags" style="margin-top: 4px;">
                  {{#each genres}}
                  <span class="movie-tag movie-tag-genre">{{this}}</span>
                  {{/each}}
                </div>
                {{/if}}
                <div class="movie-tags" style="margin-top: 6px;">
                  {{#if tmdbUrl}}
                  <a href="{{{tmdbUrl}}}" target="_blank" rel="noopener noreferrer" class="movie-tag-link movie-tag-tmdb">TMDB</a>
                  {{/if}}
                  {{#if maoyanUrl}}
                  <a href="{{{maoyanUrl}}}" target="_blank" rel="noopener noreferrer" class="movie-tag-link movie-tag-maoyan">猫眼</a>
                  {{/if}}
                </div>
                {{#if releaseDate}}
                <div class="movie-meta">{{releaseDate}}</div>
                {{/if}}
              </div>
            </div>
            {{/each}}
          </div>
        </div>

        <div style="text-align: center; margin-top: 32px">
          <a href="{{shareUrl}}" class="cta-button">View Full List →</a>
        </div>

        <div class="footer">This email was automatically generated by vercel-veil. Please do not reply directly.</div>
      </div>
    </div>
  </body>
</html>

