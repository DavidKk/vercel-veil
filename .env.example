# ============================================
# Vercel Veil - Environment Variables Example
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# ============================================
# Required: Authentication
# ============================================

ACCESS_USERNAME="admin"
ACCESS_PASSWORD="your-secure-password"
JWT_SECRET="your-jwt-secret-key-here"

# ============================================
# Optional: 2FA (Two-Factor Authentication)
# ============================================

# ACCESS_2FA_SECRET="your-totp-secret-here"

# ============================================
# Required: API Authentication
# ============================================

API_USERNAME="api_user"
API_PASSWORD="api_password"
API_TOKEN_SECRET="your-api-token-secret-here"
# API_TOKEN_HEADER="x-vv-token"

# ============================================
# Required: Email Notifications (Resend)
# ============================================

RESEND_API_KEY="re_xxxxxxxxxxxxx"
NOTIFICATION_EMAIL_FROM="Veil <noreply@example.com>"
NOTIFICATION_EMAIL_TO="ops@example.com,alerts@example.com"

# ============================================
# Optional: TMDB Configuration
# ============================================

# TMDB_API_KEY="tmdb_xxxxxxxxxxxxx"
# TMDB_SESSION_ID="your-tmdb-session-id-here"
# TMDB_LANGUAGE="zh-CN"
# TMDB_REGION="CN"

# ============================================
# Optional: TheTVDB Configuration
# ============================================

# THE_TVDB_API_KEY="tvdb_xxxxxxxxxxxxx"
# THE_TVDB_LANGUAGE="zh-CN"

# ============================================
# Optional: Metadata Language Preference
# ============================================

# PREFERRED_METADATA_LANGUAGE="zh-CN"

# ============================================
# Optional: GitHub GIST Storage (Movie Cache)
# ============================================

# GIST_ID="xxxxxxxxxxxxxxxxxxxx"
# GIST_TOKEN="ghp_xxxxxxxxxxxxxxxxxx"

# ============================================
# Optional: Vercel Project Information
# ============================================

# VERCEL_ACCESS_TOKEN="vercel_xxxxxxxxxxxxx"
# VERCEL_PROJECT_EXCLUDES="vercel-demo,vercel-legacy"

# ============================================
# Optional: Navidrome Music Server
# ============================================

# NAVIDROME_URL="https://music.example.com"
# NAVIDROME_USERNAME="admin"
# NAVIDROME_PASSWORD="password"

# ============================================
# Optional: Cache Configuration
# ============================================

# CACHE="1"

# ============================================
# Optional: Vercel Cron Jobs
# ============================================

CRON_SECRET="your-cron-secret-token-here"

# ============================================
# Auto-generated (do not set manually)
# ============================================

# NEXT_PUBLIC_BUILD_TIME="2024-01-01T00:00:00Z"
