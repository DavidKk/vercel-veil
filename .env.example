########################################
# Core required configuration
########################################

# Admin login (required)
ACCESS_USERNAME=admin
ACCESS_PASSWORD=change_me

# JWT (required)
JWT_SECRET=please_change_this_jwt_secret
# Optional: JWT expiration time (seconds or like "1d", default "1d")
# JWT_EXPIRES_IN=86400

# Webhook token (third-party callers)
# Optional: header name, default "x-vv-token"
# WEBHOOK_TOKEN_HEADER=x-vv-token
# Required: header token value (must match the token sent by third-party callers)
WEBHOOK_TOKEN_SECRET=super_secret_webhook_token


########################################
# Optional features (enable by filling values)
########################################

# ===== 2FA (TOTP) – enable 2FA by setting this =====
ACCESS_2FA_SECRET=YOUR_TOTP_SECRET_BASE32


# ===== TMDB – metadata & poster lookup =====
TMDB_API_KEY=tmdb_api_key_here
# Optional: preferred TMDB language (default "zh-CN")
# TMDB_LANGUAGE=zh-CN
# Optional
# TMDB_REGION=CN


# ===== TheTVDB – metadata & poster lookup =====
THE_TVDB_API_KEY=thetvdb_api_key_here
# Optional: preferred TheTVDB language (default "zh-CN")
# THE_TVDB_LANGUAGE=zh-CN


# ===== Metadata language preference =====
# Optional: preferred metadata language (e.g. "zh-CN", default "zh-CN")
# PREFERRED_METADATA_LANGUAGE=zh-CN


# ===== Resend email notification =====
RESEND_API_KEY=resend_api_key_here
NOTIFICATION_EMAIL_TO=you@example.com
NOTIFICATION_EMAIL_FROM="Veil Notifications <noreply@example.com>"


# ===== Gist storage (used when Gist features are enabled) =====
# GIST_ID=your_gist_id
# GIST_TOKEN=github_personal_access_token


# ===== Vercel integration (list vercel-* projects on home page) =====
# VERCEL_ACCESS_TOKEN=vercel_access_token_here
# Optional: comma-separated list of Vercel projects to exclude from display
# VERCEL_PROJECT_EXCLUDES=vercel-veil,vercel-2fa